<h1>Edit user's information</h1>

<% form_for @user do |form| %>

<div class="text-field">
  <%= form.label :username %>
  <%= form.text_field :username, type: 'username' %>
</div>

<div class="field">
  <%= form.label :photo %>
  <%= form.file_field :photo %>
</div>

<div class="actions">
  <%= form.submit %>
</div>

<% end %>

<%= link_to 'Back', user_path(@user) %>
